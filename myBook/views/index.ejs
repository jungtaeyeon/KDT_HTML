      <!-- 글쓰기에서 유효성 체크 후에 알림 처리 모달 추가 -->
      <%-include("common/modal_alert.ejs")%>
    </div>
  </body>
  <script>
    // DOM이 다 그려진거야??
    $(document).on("ready", () => {
      setTimeout(() => {
        $("#loading").hide();
      }, 1000);
    });
  </script>
